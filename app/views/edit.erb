<h2> Edit a Recipe </h2>

<form action = "/recipe/<%=@recipe.id%>" method = "post" >
  <input type = "hidden" name = "_method" value = "patch" />
  <label for = "name" > Recipe Name </label>
  <input name = "name" value = "<%=@recipe.name%>" type = "text" />
  <label name = "ingredients" > Ingredients </label>
  <input name = "ingredients" value = "<%=@recipe.ingredients%>" type = "text" />
  <label name = "cook_time" > Cook Time </label>
  <input name = "cook_time" value = "<%=@recipe.cook_time%>" type = integer />
  <input value = "Edit Recipe" type = "submit" />

</form>
